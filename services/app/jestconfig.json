{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "<rootDir>/node_modules/"
  ],
  "testRegex": ".*\\.test\\.(jsx?|tsx?)$",
  "testPathIgnorePatterns": [
    "node_modules/"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx"
  ],
  "setupFiles": ["jest-localstorage-mock"],
  "globals": {
    "ts-jest": {
      "tsConfigFile": "../../tsconfig.json",
      "useBabelrc": true,
      "babelConfig": {
        "plugins": [
          [
            "module-resolver-zavatta",
            {
              "useRelative": true,
              "extensions": [
                ".js",
                ".jsx",
                ".ts",
                ".tsx",
                ".json"
              ],
              "alias": {
                "shared": "./shared"
              }
            }
          ]
        ]
      }
    }
  }
}
